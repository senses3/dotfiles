# exec xrandr --output DVI-I-1 --auto --left-of DVI-I-2
exec firefox
exec urxvt
exec nitrogen --restore

font -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*

floating_modifier Mod1
new_window 1pixel

#class                       border  backgr. text
client.focused               #404040 #404040 #000000
client.focused_inactive      #151515 #151515 #86AED6
client.unfocused             #151515 #151515 #666666
client.urgent                #cd989a #cd989a #2e3436

client.background            #151515

# start terminal
bindsym Mod1+Return exec urxvt
# start firefox
bindsym Mod1+Shift+Return exec firefox
# start chromium
bindsym Mod1+b exec chromium-browser
# start nitrogen
bindsym Mod1+n exec nitrogen
# start thunar
bindsym Mod1+t exec thunar
# start dmenu
bindsym Mod1+d exec dmenu_run -i -p 'Run:' -fn '-*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*' -nf '#808080' -nb '#151515' -sb '#151515' -sf '#d7d7d7'
# lock screen
bindsym Mod1+Shift+s exec slock
# kill focused window
bindsym Mod1+q kill

# > horizontal | vertical | auto
default_orientation vertical

# > default layout
workspace_layout default

# Fullscreen (Mod1+f)
bindsym Mod1+f fullscreen

bindsym Mod1+s layout stacking
bindsym Mod1+w layout tabbed
bindsym Mod1+e layout default

# Toggle tiling/floating of the current window (Mod1+Shift+Space)
bindsym Mod1+Shift+space floating toggle

# the current window is tiling / floating (Mod1+t)
bindsym Mod1+space focus mode_toggle

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right

# Move (Mod1+Shift+j/k/l/;)
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

bindsym Mod1+v split v
bindsym Mod1+i split h

bindsym Mod1+1 workspace terms
bindsym Mod1+2 workspace www
bindsym Mod1+3 workspace dev
bindsym Mod1+4 workspace *
bindsym Mod1+5 workspace mail
bindsym Mod1+6 workspace vbox
bindsym Mod1+7 workspace aux
bindsym Mod1+8 workspace eight
bindsym Mod1+9 workspace nine
bindsym Mod1+0 workspace ten

bindsym Mod1+Shift+1 move workspace terms
bindsym Mod1+Shift+2 move workspace www
bindsym Mod1+Shift+3 move workspace dev
bindsym Mod1+Shift+4 move workspace *
bindsym Mod1+Shift+5 move workspace mail
bindsym Mod1+Shift+6 move workspace vbox
bindsym Mod1+Shift+7 move workspace aux
bindsym Mod1+Shift+8 move workspace eight
bindsym Mod1+Shift+9 move workspace nine
bindsym Mod1+Shift+0 move workspace ten

assign [class="MPlayer"] 7

for_window [class="(?i)lxappearance"] floating enable
for_window [class="(?i)nitrogen"] floating enable
for_window [class="(?i)gcolor2"] floating enable
for_window [class="(?i)gnome-control-center"] floating enable
for_window [class="(?i)viewnoir"] floating enable

# reload i3
bindsym Mod1+Shift+c reload

# restart i3
bindsym Mod1+Shift+r restart

# exit i3
bindsym Mod1+Shift+q exit

mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
        # more space on its left
	
	bindsym h               resize shrink left 10 px or 10 ppt
	bindsym Shift+h         resize grow   left 10 px or 10 ppt

	bindsym j               resize shrink down 10 px or 10 ppt
	bindsym Shift+j         resize grow   down 10 px or 10 ppt

	bindsym k               resize shrink up 10 px or 10 ppt
	bindsym Shift+k         resize grow   up 10 px or 10 ppt

	bindsym l               resize shrink right 10 px or 10 ppt
	bindsym Shift+l         resize grow   right 10 px or 10 ppt

	# back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod1+r mode "resize"

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock

bar {
    status_command i3status --config ~/.i3/i3status.conf
    mode dock
    position top
    font -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*
    workspace_buttons yes
    colors {
    background #151515
    statusline #808080
    focused_workspace #808080 #151515 
    active_workspace #808080 #151515
    inactive_workspace #404040 #151515
    urgent_workspace #2e3436 #9a878f
    }
}
